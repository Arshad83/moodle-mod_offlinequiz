<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/offlinequiz/db" VERSION="20130416" COMMENT="XMLDB file for Moodle 2.0+ mod/offlinequiz"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="offlinequiz" COMMENT="Main information about each offlinequiz" NEXT="offlinequiz_groups">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="course"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="id" NEXT="name"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" PREVIOUS="course" NEXT="intro"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="true" SEQUENCE="false" PREVIOUS="name" NEXT="introformat"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="intro" NEXT="pdfintro"/>
        <FIELD NAME="pdfintro" TYPE="text" NOTNULL="false" SEQUENCE="false" PREVIOUS="introformat" NEXT="timeopen"/>
        <FIELD NAME="timeopen" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="pdfintro" NEXT="timeclose"/>
        <FIELD NAME="timeclose" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="timeopen" NEXT="time"/>
        <FIELD NAME="time" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="timeclose" NEXT="grade"/>
        <FIELD NAME="grade" TYPE="number" LENGTH="10" NOTNULL="true" UNSIGNED="false" DEFAULT="0" SEQUENCE="false" DECIMALS="5" PREVIOUS="time" NEXT="numgroups"/>
        <FIELD NAME="numgroups" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="2" SEQUENCE="false" PREVIOUS="grade" NEXT="decimalpoints"/>
        <FIELD NAME="decimalpoints" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="2" SEQUENCE="false" PREVIOUS="numgroups" NEXT="review"/>
        <FIELD NAME="review" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="decimalpoints" NEXT="questionsperpage"/>
        <FIELD NAME="questionsperpage" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="review" NEXT="docscreated"/>
        <FIELD NAME="docscreated" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1 iff the documents (question and answer sheets) have been created for an offline quiz." PREVIOUS="questionsperpage" NEXT="shufflequestions"/>
        <FIELD NAME="shufflequestions" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="docscreated" NEXT="shuffleanswers"/>
        <FIELD NAME="shuffleanswers" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="shufflequestions" NEXT="papergray"/>
        <FIELD NAME="papergray" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="650" SEQUENCE="false" PREVIOUS="shuffleanswers" NEXT="fontsize"/>
        <FIELD NAME="fontsize" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="10" SEQUENCE="false" PREVIOUS="papergray" NEXT="timecreated"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="fontsize" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="timecreated" NEXT="fileformat"/>
        <FIELD NAME="fileformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="timemodified" NEXT="showgrades"/>
        <FIELD NAME="showgrades" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="fileformat" NEXT="showtutorial"/>
        <FIELD NAME="showtutorial" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="showgrades"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Primary key for offlinequiz"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="offlinequiz_groups" COMMENT="Groups in offline quizzes" PREVIOUS="offlinequiz" NEXT="offlinequiz_group_questions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="offlinequizid"/>
        <FIELD NAME="offlinequizid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The offline quiz the group belongs to" PREVIOUS="id" NEXT="number"/>
        <FIELD NAME="number" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The number of the group (1...n)." PREVIOUS="offlinequizid" NEXT="sumgrades"/>
        <FIELD NAME="sumgrades" TYPE="number" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" DECIMALS="5" COMMENT="The sum of all grades of question instances in an offlineequiz group." PREVIOUS="number" NEXT="numberofpages"/>
        <FIELD NAME="numberofpages" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The number of pages of the answer document for a group." PREVIOUS="sumgrades" NEXT="templateusageid"/>
        <FIELD NAME="templateusageid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Link to the group's template question usage in the question engine." PREVIOUS="numberofpages"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="offlinequizid" UNIQUE="false" FIELDS="offlinequizid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="offlinequiz_group_questions" COMMENT="The questions of an offlinequiz group" PREVIOUS="offlinequiz_groups" NEXT="offlinequiz_q_instances">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="offlinequizid"/>
        <FIELD NAME="offlinequizid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Link to the offlinequiz." PREVIOUS="id" NEXT="offlinegroupid"/>
        <FIELD NAME="offlinegroupid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The offlinequiz group the question belongs to." PREVIOUS="offlinequizid" NEXT="questionid"/>
        <FIELD NAME="questionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID of the question in the question base." PREVIOUS="offlinegroupid" NEXT="position"/>
        <FIELD NAME="position" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="Position of the question in the question list (1...n)." PREVIOUS="questionid" NEXT="pagenumber"/>
        <FIELD NAME="pagenumber" TYPE="int" LENGTH="4" NOTNULL="false" SEQUENCE="false" COMMENT="Number of the page of the answer document where the answers to this question will be found. The field will be filled when the answer documents are created." PREVIOUS="position" NEXT="usageslot"/>
        <FIELD NAME="usageslot" TYPE="int" LENGTH="4" NOTNULL="false" SEQUENCE="false" COMMENT="The slot of the question in the template usage of the group. This will be filled when after the usage template has been created." PREVIOUS="pagenumber"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="offlinequiz" UNIQUE="false" FIELDS="offlinequizid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="offlinequiz_q_instances" COMMENT="The questions instances of offlinequizzes." PREVIOUS="offlinequiz_group_questions" NEXT="offlinequiz_scanned_pages">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="offlinequizid"/>
        <FIELD NAME="offlinequizid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The ID of the offlinequiz." PREVIOUS="id" NEXT="questionid"/>
        <FIELD NAME="questionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" PREVIOUS="offlinequizid" NEXT="grade"/>
        <FIELD NAME="grade" TYPE="number" LENGTH="12" NOTNULL="true" DEFAULT="0" SEQUENCE="false" DECIMALS="7" PREVIOUS="questionid"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="offlinequiz_scanned_pages" COMMENT="The pages of answer documents scanned by a teacher." PREVIOUS="offlinequiz_q_instances" NEXT="offlinequiz_choices">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="offlinequizid"/>
        <FIELD NAME="offlinequizid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The offlinequiz the page belongs to." PREVIOUS="id" NEXT="resultid"/>
        <FIELD NAME="resultid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="The result this page contributed to." PREVIOUS="offlinequizid" NEXT="filename"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="1000" NOTNULL="false" SEQUENCE="false" COMMENT="The file of the scanned page." PREVIOUS="resultid" NEXT="warningfilename"/>
        <FIELD NAME="warningfilename" TYPE="char" LENGTH="1000" NOTNULL="false" SEQUENCE="false" COMMENT="ID of a warning file iff created by the teacher." PREVIOUS="filename" NEXT="groupnumber"/>
        <FIELD NAME="groupnumber" TYPE="int" LENGTH="4" NOTNULL="false" SEQUENCE="false" COMMENT="The (incomplete) number of the group (1...n)." PREVIOUS="warningfilename" NEXT="userkey"/>
        <FIELD NAME="userkey" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="(Incomplete) username of the user the scanned page belongs to." PREVIOUS="groupnumber" NEXT="pagenumber"/>
        <FIELD NAME="pagenumber" TYPE="int" LENGTH="4" NOTNULL="false" SEQUENCE="false" COMMENT="The (incomplete) number of the page." PREVIOUS="userkey" NEXT="time"/>
        <FIELD NAME="time" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The latest point in time the page was evaluated or modified." PREVIOUS="pagenumber" NEXT="status"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="The status of the scanned page ( 'error', 'ok', 'submitted')." PREVIOUS="time" NEXT="error"/>
        <FIELD NAME="error" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="The errorcode (in case status is 'error') as Moodle language string identifiers (insecuremarkings, unknownuser, unknowngroup, unkownusername, etc)." PREVIOUS="status" NEXT="info"/>
        <FIELD NAME="info" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Info text, e.g. the filename if a file could not be read at all." PREVIOUS="error"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="offlinequizid" UNIQUE="false" FIELDS="offlinequizid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="offlinequiz_choices" COMMENT="The choices made by users on scanned pages." PREVIOUS="offlinequiz_scanned_pages" NEXT="offlinequiz_page_corners">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="scannedpageid"/>
        <FIELD NAME="scannedpageid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The scanned page the choice belongs to." PREVIOUS="id" NEXT="slotnumber"/>
        <FIELD NAME="slotnumber" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false" COMMENT="The group question the answer belongs to" PREVIOUS="scannedpageid" NEXT="choicenumber"/>
        <FIELD NAME="choicenumber" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false" COMMENT="The number of the choice  (1...n), i.e. the number of the answer, the choice belongs to." PREVIOUS="slotnumber" NEXT="value"/>
        <FIELD NAME="value" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false" COMMENT="The choice made by the user (1 for 'marked', 0 for 'empty', -1 for 'unknown')." PREVIOUS="choicenumber"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="scannedpageid" UNIQUE="false" FIELDS="scannedpageid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="offlinequiz_page_corners" COMMENT="Contains the four corners for every page in offlinequiz_scanned_pages." PREVIOUS="offlinequiz_choices" NEXT="offlinequiz_results">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="scannedpageid"/>
        <FIELD NAME="scannedpageid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The ID of the scanned page the corners belong to." PREVIOUS="id" NEXT="x"/>
        <FIELD NAME="x" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The x coordinate of the corner." PREVIOUS="scannedpageid" NEXT="y"/>
        <FIELD NAME="y" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The y coordinate of the corner." PREVIOUS="x" NEXT="position"/>
        <FIELD NAME="position" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false" COMMENT="The position of the corner (1 -&amp;gt;topleft, 2-&amp;gt;topright, 3-&amp;gt;bottomleft, 4-&amp;gt;bottomright)." PREVIOUS="y"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="offlinequiz_results" COMMENT="(Incomplete) results of students for an offlinequiz. Will be filled while answer documents are evaluated." PREVIOUS="offlinequiz_page_corners" NEXT="offlinequiz_p_lists">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="offlinequizid"/>
        <FIELD NAME="offlinequizid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The offlinequiz the result belongs to." PREVIOUS="id" NEXT="offlinegroupid"/>
        <FIELD NAME="offlinegroupid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The offlinequiz group the result belongs to." PREVIOUS="offlinequizid" NEXT="userid"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The id of the user the result belongs to." PREVIOUS="offlinegroupid" NEXT="sumgrades"/>
        <FIELD NAME="sumgrades" TYPE="number" LENGTH="10" NOTNULL="false" SEQUENCE="false" DECIMALS="5" COMMENT="The sum of grades achieved in the attempt that led to a result." PREVIOUS="userid" NEXT="usageid"/>
        <FIELD NAME="usageid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The question engine usage the result belongs to." PREVIOUS="sumgrades" NEXT="teacherid"/>
        <FIELD NAME="teacherid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The id of the teacher that evaluted the answer documents." PREVIOUS="usageid" NEXT="attendant"/>
        <FIELD NAME="attendant" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Whether the user was attendant or not, depending on the use of list of participants ('yes', 'no', 'scanonly')." PREVIOUS="teacherid" NEXT="status"/>
        <FIELD NAME="status" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="The status of the result ('complete', 'partial')." PREVIOUS="attendant" NEXT="timestart"/>
        <FIELD NAME="timestart" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The time the result was created." PREVIOUS="status" NEXT="timefinish"/>
        <FIELD NAME="timefinish" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="The time the result was created. Just for code compatibility." PREVIOUS="timestart" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The time the result was modified." PREVIOUS="timefinish" NEXT="preview"/>
        <FIELD NAME="preview" TYPE="int" LENGTH="3" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="preview mode." PREVIOUS="timemodified"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="offlinequiz_p_lists" COMMENT="Lists for participants" PREVIOUS="offlinequiz_results" NEXT="offlinequiz_participants">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="offlinequizid"/>
        <FIELD NAME="offlinequizid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="id" NEXT="name"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" PREVIOUS="offlinequizid" NEXT="number"/>
        <FIELD NAME="number" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="The number of the list." PREVIOUS="name" NEXT="filename"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="1000" NOTNULL="false" SEQUENCE="false" COMMENT="The id of the PDF file in the files table." PREVIOUS="number"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="offlinequizid" UNIQUE="false" FIELDS="offlinequizid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="offlinequiz_participants" COMMENT="Checklist for the participants of an offline quiz" PREVIOUS="offlinequiz_p_lists" NEXT="offlinequiz_scanned_p_pages">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="listid"/>
        <FIELD NAME="listid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="id" NEXT="userid"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="listid" NEXT="checked"/>
        <FIELD NAME="checked" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="userid"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="listid" UNIQUE="false" FIELDS="listid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="offlinequiz_scanned_p_pages" COMMENT="Stores information about scanned participants-list-pages." PREVIOUS="offlinequiz_participants" NEXT="offlinequiz_p_choices">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="offlinequizid"/>
        <FIELD NAME="offlinequizid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The ID of the offlinequiz the page belongs to." PREVIOUS="id" NEXT="listnumber"/>
        <FIELD NAME="listnumber" TYPE="int" LENGTH="4" NOTNULL="false" SEQUENCE="false" COMMENT="The number of the list" PREVIOUS="offlinequizid" NEXT="filename"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="1000" NOTNULL="false" SEQUENCE="false" COMMENT="The ID of the image file in the files table." PREVIOUS="listnumber" NEXT="time"/>
        <FIELD NAME="time" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The time the page was scanned." PREVIOUS="filename" NEXT="status"/>
        <FIELD NAME="status" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="The status of the page." PREVIOUS="time" NEXT="error"/>
        <FIELD NAME="error" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="The error of the page if status == error" PREVIOUS="status"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="offlinequiz_p_choices" COMMENT="The table contains the choices made on scanned lists of participants." PREVIOUS="offlinequiz_scanned_p_pages" NEXT="offlinequiz_queue">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="scannedppageid"/>
        <FIELD NAME="scannedppageid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The ID of the corresponding page in offlinequiz_scanned_p_pages." PREVIOUS="id" NEXT="userid"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="The ID of the user as recognised from the bar code." PREVIOUS="scannedppageid" NEXT="value"/>
        <FIELD NAME="value" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The value of the  choice (1, 0, -1). -1 stands for insecure markings." PREVIOUS="userid"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="offlinequiz_queue" COMMENT="list of cron jobs" PREVIOUS="offlinequiz_p_choices" NEXT="offlinequiz_queue_data">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="offlinequizid"/>
        <FIELD NAME="offlinequizid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The ID of the offlinequiz the job belongs to." PREVIOUS="id" NEXT="importuserid"/>
        <FIELD NAME="importuserid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The ID of the user that imported the files of a job." PREVIOUS="offlinequizid" NEXT="timestart"/>
        <FIELD NAME="timestart" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="importuserid" NEXT="timefinish"/>
        <FIELD NAME="timefinish" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="timestart" NEXT="status"/>
        <FIELD NAME="status" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="The status of a queue job ('new', 'processing', 'finished')." PREVIOUS="timefinish"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="offlinequiz_queue_data" COMMENT="import data for cron jobs" PREVIOUS="offlinequiz_queue" NEXT="offlinequiz_attempts">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="queueid"/>
        <FIELD NAME="queueid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The ID of the queue job an entry belongs to." PREVIOUS="id" NEXT="filename"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" PREVIOUS="queueid" NEXT="status"/>
        <FIELD NAME="status" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="The status of a file ('new', 'ok', 'error'). In case of 'error', the error field contains the error message." PREVIOUS="filename" NEXT="error"/>
        <FIELD NAME="error" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="The error message (get_string label) in case the status is 'error'." PREVIOUS="status"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="offlinequiz_attempts" COMMENT="Stores various attempts on a offlinequiz" PREVIOUS="offlinequiz_queue_data" NEXT="offlinequiz_reports">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="uniqueid"/>
        <FIELD NAME="uniqueid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="id" NEXT="offlinequiz"/>
        <FIELD NAME="offlinequiz" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="uniqueid" NEXT="groupid"/>
        <FIELD NAME="groupid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="offlinequiz" NEXT="userid"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="groupid" NEXT="attempt"/>
        <FIELD NAME="attempt" TYPE="int" LENGTH="6" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="userid" NEXT="sumgrades"/>
        <FIELD NAME="sumgrades" TYPE="float" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="attempt" NEXT="timestart"/>
        <FIELD NAME="timestart" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="sumgrades" NEXT="timefinish"/>
        <FIELD NAME="timefinish" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="timestart" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="timefinish" NEXT="layout"/>
